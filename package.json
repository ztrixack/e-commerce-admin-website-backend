{
  "name": "e-commerce-admin-website",
  "version": "1.0.0",
  "description": "E-Commerce Admin-Website Backend",
  "repository": {
    "type": "git",
    "url": "git://github.com/ztrixack/e-commerce-admin-website-backend.git"
  },
  "engines": {
    "npm": ">=5",
    "node": ">=8.15.1"
  },
  "author": "Tanawat Hongthai",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon -L --inspect=0.0.0.0:8228 .",
    "start:production": "yarn test && yarn start:prod",
    "start:prod": "cross-env NODE_ENV=production node .",
    "lint": "yarn lint:js",
    "lint:js": "yarn lint:eslint -- . ",
    "lint:eslint": "eslint --ignore-path .gitignore --color",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --color --fix",
    "lint:staged": "lint-staged",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "prettify": "prettier --write"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "IE 10"
  ],
  "lint-staged": {
    "'**/**.js?(on)'": [
      "yarn prettify",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validation": "^1.0.3",
    "helmet": "^3.21.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "rand-token": "^0.4.0",
    "sequelize": "^5.21.3",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest-cli": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1"
  }
}
